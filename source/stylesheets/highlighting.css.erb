<%#= Rouge::Themes::Github.render(:scope => '.highlight') %>

.highlight {
  border: 1px solid #ddd;
  font-size: 0.8em;
  max-width: 80%;
  margin: 0 auto 1.5em;
  overflow: scroll;
}
pre {
  padding: 0;
  line-height: 23px;
  margin: 0;
  white-space: pre;
  overflow-x: auto;
  word-break: inherit;
  word-wrap: inherit;
}
.highlight td {
    padding: 8px 15px;
}
.gl { 
  background-color: #fafafa;
  border-right: 1px solid #ddd;
  color: #999;
  /* Stop line numbers being visually selected */
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
code {
  border: 1px solid #ddd;
  background-color: #fafafa;
  border-radius: 5px;
  display: inline-block;
  font-size: 0.8em;
  padding: 1px 7px;
}
.highlight .err {
  background-color: transparent !important;
  color: #000 !important;
}