<div class="featured-projects">
  <h2>Featured Projects</h2>
  <% 
    featured = data.work_items.clients.select{|item| item.featured rescue false }
    featured.each_with_index do |client| %>
    <article class="ft-<%= client.url %>">
      <% link_to("/work/#{client.url}/") do %>
        <%= image_tag("work/#{client.url}/#{client.image_featured}", :alt => "") %>
        <h3><%= client.title %></h3>
      <% end %>
    </article>
  <% end %>
</div>