---
pageable: true
per_page: 10
---

<% content_for(:title, "Blog") %>

<section class="blog">

  <header class="section-header">
    <h1>Our Blog</h1>  
  </header>

  <div class="blog-list">
    
    <% if paginate && num_pages > 1 %>
      <small>Page <%= page_number %> of <%= num_pages %></small>

      <% if prev_page %>
        <p class="read-more"><%= link_to 'Previous page', prev_page %></p>
      <% end %>
    <% end %>

    <% blog.articles.each do |article| %>
      <%= partial "blog_summary", :locals => { :article => article } %>
    <% end %>

    <% if paginate %>
      <% if next_page %>
        <p class="read-more"><%= link_to 'Next page', next_page %></p>
      <% end %>
    <% end %>

  </div>

</section>